 function studentList(arr){
 var out = "<table border=1 width=100%><tr><th>First Name</th><th>Last Name</th><th>Roll Number</th> <th>Subject</th></tr>";
    var i;
    for(i = 0; i < arr.length; i++) {
        out += "<tr><td>" + arr[i].firstName + "</td><td >" + 
			  arr[i].lastName + "</td><td >" +
			  arr[i].rollNo + "</td><td >" +
			  arr[i].subjects ;
	}
	out +="</table>";
	document.getElementById("studentDiv").innerHTML = out;
 }

